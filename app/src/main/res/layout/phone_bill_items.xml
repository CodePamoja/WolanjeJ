<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PhoneSentTransMonth"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="oct"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/PhoneSentTransDate"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:text="22"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:singleLine="true" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/PhoneTransferMain"
            >

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Phone_pic_trans"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bulb"
                />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/Phone_billValues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/PhoneTransName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Name"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/PhoneTransPayMethod"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:ellipsize="marquee"
                android:text="Phone Number"
                android:textSize="12sp"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PhoneTransactionAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text= "1,500.00"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/PhoneTransactionFees"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:singleLine="true" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>