<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f2f6"
    tools:context=".BookBus06">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_purple"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/home_purple"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:navigationIcon="@mipmap/small_left2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Review &amp; Book"
                        android:textColor="#ffffff"
                        android:textSize="18sp" />

                </androidx.appcompat.widget.Toolbar>


                <RelativeLayout
                    android:id="@+id/tabLayout_book_bus"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/splash2"
                    android:backgroundTint="#f0f2f6"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/flightIconBusInfo04"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="5dp"
                        android:src="@mipmap/favorites_2" />

                    <TextView
                        android:id="@+id/TextBusInfo01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:layout_toEndOf="@+id/flightIconBusInfo04"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="14sp"
                        android:text="Easy Coach"
                        android:textColor="@color/colorMidnight"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/flightDurationText02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/TextBusInfo01"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="3dp"
                        android:layout_toEndOf="@+id/flightIconBusInfo04"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="11sp"
                        android:text="@string/_8h_12m_1_stop"
                        android:textColor="@color/blue_grey"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/Textfilghtcharge03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="140dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="40dp"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="14sp"
                        android:text="KES 643"
                        android:textColor="@color/colorMidnight"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/flightticketsBus04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="10 tickets left"
                        android:textColor="@color/blue_grey"
                        android:textSize="13sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f0f2f6"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearbinfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/townBusFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="10sp"
                        android:text="AUS"
                        android:textColor="@color/colorMidnight"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/depatureBInfo04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="8sp"
                        android:text="5:15 PM"
                        android:textColor="@color/blue_grey"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearbinfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TownBusTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="10sp"
                        android:text="BNA"
                        android:textColor="#5b3b5d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/arrivalBInfo04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:lineSpacingExtra="8sp"
                        android:text="11:15 PM"
                        android:textColor="@color/blue_grey"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/separatorone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linearbinfo1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="16dp"
                    android:background="@color/gray4" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="39dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Contact Info"
                android:textColor="@color/colorMidnight"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phonenumBookBus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="+254">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:maxLength="9" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailBookBus06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phonenumBookBus"
                    android:layout_margin="24dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Enter you email to receive info ">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/promoCodeBookBus06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/emailBookBus06"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginBottom="100dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Promo Code">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>

            <View
                android:id="@+id/separator4"
                android:layout_width="355dp"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@color/gray4" />
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnnewxtholder"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/warm_purple"
            android:layout_marginBottom="8dp"
            android:onClick="MoveToBookBu09"
            android:text="Next"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.button.MaterialButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>