<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/loansbottomSheets"
    android:background="@drawable/splash2"
    android:theme="@style/AppTheme">

    <ImageButton
        android:id="@+id/imagebtn_loan_netSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:src="@mipmap/rectanglew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLoanSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Loan"
        android:textColor="@color/colorMidnight"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebtn_loan_netSheet" />


    <TextView
        android:id="@+id/txt_balance_loan_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="end"
        android:text="Loan Limit"
        android:textColor="@color/blue_grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebtn_loan_netSheet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="end"
        android:letterSpacing="0.03"
        android:text="kes 0.000"
        android:textColor="#18181c"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_balance_loan_sheet" />


    <EditText
        android:id="@+id/amountRequested"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/wallet_pop_up_shape"
        android:fontFamily="@font/poppins_regular"
        android:hint="Enter Amount"
        android:inputType="number"
        android:paddingHorizontal="10dp"
        app:counterEnabled="true"
        app:counterMaxLength="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLoanSheet" />

    <Spinner
        android:id="@+id/useOfFundsSpinner"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/myspinner"
        android:fontFamily="@font/poppins_regular"
        android:hint="Use of Funds"
        android:inputType="number"
        android:paddingHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountRequested" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonReqLoanSheet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/warm_purple"
        android:fontFamily="@font/poppins_regular"
        android:text="Send Request"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/amountRequested" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelLoanReqSheet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="221dp"
        android:backgroundTint="@color/colorWhite"
        android:fontFamily="@font/poppins_regular"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#8c8a9a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReqLoanSheet" />

</androidx.constraintlayout.widget.ConstraintLayout>