<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Sponsors00">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/group_009"
        android:orientation="vertical">
        <include layout="@layout/toolbarwithout2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sponsor"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:layout_marginStart="29dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:orientation="horizontal"
        android:layout_marginTop="37dp">
        
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_new_application"
            app:cardCornerRadius="10dp"
            android:elevation="6dp"
            android:layout_width="152dp"
            android:layout_height="162dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/notification_badge_new_application"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="41dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/queue_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="29dp"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:textColor="@color/colorMidnight"
                android:lineSpacingExtra="3sp"
                android:gravity="center_horizontal"
                android:text="New
Application"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_new_appliants"
            app:cardCornerRadius="10dp"
            android:elevation="6dp"
            android:layout_width="152dp"
            android:layout_height="162dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/new_applicants_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="41dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/library_books_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="29dp"
                android:layout_marginStart="35dp"
                android:textSize="16sp"
                android:textColor="@color/colorMidnight"
                android:lineSpacingExtra="3sp"
                android:gravity="center_horizontal"
                android:text="
Applicants"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="171dp"
        android:orientation="horizontal"
        android:layout_marginTop="37dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_saved_application"
            app:cardCornerRadius="10dp"
            android:elevation="6dp"
            android:layout_width="152dp"
            android:layout_height="162dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/saved_application_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="41dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:src="@drawable/bookmark_border_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="29dp"
                android:layout_marginStart="13dp"
                android:textSize="16sp"
                android:textColor="@color/colorMidnight"
                android:lineSpacingExtra="3sp"
                android:gravity="center_horizontal"
                android:text="Saved
Application"
                />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>