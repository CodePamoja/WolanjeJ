<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbarhome"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWarmpurple"
        android:paddingTop="62.3dp"
        android:paddingHorizontal="24dp"
        >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:text="Current Balance"
                android:id="@+id/textbalance"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            tools:text="$7800.00"
            android:layout_below="@id/textbalance"
            android:layout_marginTop="16dp"
            android:id="@+id/price"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:id="@+id/wallet"
            android:backgroundTint="@color/colorAccent"
            android:background="@drawable/gradient"
            android:text="My E-Wallet"
            android:layout_marginBottom="24dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:layout_toRightOf="@id/wallet"
            android:text="Transfer Money"
            android:layout_marginLeft="16dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/gradient"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#222222"
            tools:text="Recent Transfer"
            android:id="@+id/trans"
            />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="ADD NEW"
            android:textColor="#21c17a"
            android:textSize="16sp"
            android:id="@+id/btnaddnew"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO TRANSFERS"
            android:layout_below="@id/btnaddnew"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#222222"
            tools:text="Quick Services"
            android:id="@+id/quick"
            />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="View All"
            android:textColor="#21c17a"
            android:textSize="16sp"
            android:id="@+id/btnviewall"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/btnviewall"
            >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_below="@id/btnviewall"
                android:clickable="true"
                android:outlineAmbientShadowColor="@color/blue_grey"
                android:elevation="@dimen/cardview_compat_inset_shadow"
                android:id="@+id/card1"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/credit_card_1"
                        android:layout_centerInParent="true"
                        android:id="@+id/airtime"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:layout_below="@id/airtime"
                        android:layout_marginTop="48dp"
                        android:layout_marginBottom="16dp"
                        android:layout_centerHorizontal="true"
                        tools:text="Buy Airtime"
                        />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnviewall"
                android:layout_toEndOf="@id/card1"
                android:clickable="true"
                android:layout_marginLeft="8dp"
                android:elevation="@dimen/cardview_compat_inset_shadow"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/money"
                        android:layout_centerInParent="true"
                        android:id="@+id/transfer"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@id/transfer"
                        android:layout_marginTop="48dp"
                        android:layout_centerHorizontal="true"
                        tools:text="Buy Airtime"
                        />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnviewall"
                android:layout_toEndOf="@id/card1"
                android:clickable="true"
                android:layout_marginLeft="8dp"
                android:elevation="@dimen/cardview_compat_inset_shadow"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/group_15"
                        android:layout_centerInParent="true"
                        android:id="@+id/loans"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@id/loans"
                        android:layout_marginTop="48dp"
                        android:layout_centerHorizontal="true"
                        tools:text="Buy Airtime"
                        />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
        

    </RelativeLayout>

</LinearLayout>