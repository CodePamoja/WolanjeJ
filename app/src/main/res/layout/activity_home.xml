<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="clip_horizontal"
    android:fitsSystemWindows="true"
    tools:context="com.example.wolanjej.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/whatblur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"

                android:orientation="vertical">

                <include layout="@layout/toolbarhome" />


                <ScrollView
                    android:id="@+id/myscroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    tools:context=".Home"

                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWarmpurple"
                            android:paddingHorizontal="24dp"
                            android:paddingTop="62.3dp">

                            <TextView
                                android:id="@+id/textbalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/current_balance"
                                android:textColor="@color/colorWhite"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/MYBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textbalance"
                                android:layout_marginTop="16dp"
                                android:gravity="center_horizontal"
                                android:textColor="@color/colorWhite"
                                android:textSize="40sp" />

                            <Button
                                android:id="@+id/wallet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/MYBalance"
                                android:layout_marginBottom="24dp"
                                android:background="@drawable/gradient"
                                android:backgroundTint="@color/colorAccent"
                                android:onClick="maketoast"
                                android:text="@string/my_e_wallet" />

                            <Button
                                android:id="@+id/transfer_money_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/MYBalance"
                                android:layout_marginStart="16dp"
                                android:layout_toEndOf="@id/wallet"
                                android:background="@drawable/gradient"
                                android:backgroundTint="@color/colorWhite"
                                android:text="@string/transfer_money"
                                android:textColor="@color/colorAccent" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="24dp"
                            android:paddingTop="24dp">

                            <TextView
                                android:id="@+id/trans"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/recent_transfer"
                                android:textColor="#222222"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/btnaddnew"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:text="@string/add_new"
                                android:textColor="#21c17a"
                                android:textSize="16sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="24dp"
                            android:paddingTop="24dp">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerViewHome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="horizontal" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="24dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="16dp">

                            <TextView
                                android:id="@+id/quick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="@string/quick_services"
                                android:textColor="#222222"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/btnviewall"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:clickable="true"
                                android:focusable="true"
                                android:text="@string/view_all"
                                android:textColor="#21c17a"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/btnviewall"
                                android:orientation="horizontal">

                                <com.google.android.material.card.MaterialCardView

                                    android:id="@+id/cardBuyAirtime"
                                    style="@style/Widget.MaterialComponents.CardView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:elevation="6dp"
                                    android:focusable="true"
                                    app:cardCornerRadius="8dp"
                                    app:strokeColor="#A8A8A8"
                                    app:strokeWidth="1dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/airtime"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="25dp"
                                            android:layout_marginBottom="8dp"
                                            android:src="@drawable/ic_credit_card_1" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/airtime"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginBottom="8dp"
                                            android:text="@string/buy_airtime"
                                            android:textColor="#444444"
                                            android:textSize="12sp" />

                                    </RelativeLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/CTransferMain"
                                    style="@style/Widget.MaterialComponents.CardView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:elevation="6dp"
                                    app:cardCornerRadius="8dp"
                                    app:strokeColor="#A8A8A8"
                                    app:strokeWidth="1dp"
                                    android:focusable="true">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/transfer"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="23dp"
                                            android:layout_marginBottom="8dp"
                                            android:contentDescription="@string/todo"
                                            android:src="@drawable/ic_money" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/transfer"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginBottom="6dp"
                                            android:text="@string/transfers"
                                            android:textColor="#444444"
                                            android:textSize="12sp" />

                                    </RelativeLayout>
                                </com.google.android.material.card.MaterialCardView>

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/loanscard"
                                    style="@style/Widget.MaterialComponents.CardView"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/btnviewall"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:elevation="6dp"
                                    android:focusable="true"
                                    app:cardCornerRadius="8dp"
                                    app:strokeColor="#A8A8A8"
                                    app:strokeWidth="1dp">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <ImageView
                                            android:id="@+id/loans"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_marginTop="30dp"
                                            android:contentDescription="@string/todo"
                                            android:src="@drawable/ic_money_bags" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/loans"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginBottom="8dp"
                                            android:text="@string/loans"
                                            android:textColor="#444444"
                                            android:textSize="12sp" />

                                    </RelativeLayout>
                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>


                        </RelativeLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginBottom="24dp"
                            app:strokeColor="#A8A8A8"
                            app:strokeWidth="1dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/analitics_image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="20dp"
                                    android:contentDescription="@string/todo"
                                    android:src="@drawable/ic_analytics" />

                                <TextView
                                    android:id="@+id/text_analyitics"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="13dp"
                                    android:layout_marginTop="21dp"
                                    android:layout_toEndOf="@id/analitics_image"
                                    android:text="@string/you_have_spent_this_month"
                                    android:textColor="#222222"
                                    android:textSize="12sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/text_analyitics"
                                    android:layout_marginStart="13dp"
                                    android:layout_toEndOf="@id/analitics_image"
                                    android:text="@string/_5670"
                                    android:textColor="#222222"
                                    android:textSize="18sp" />

                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:contentDescription="@string/todo"
                                    android:src="@mipmap/invalid_name" />

                            </RelativeLayout>
                        </com.google.android.material.card.MaterialCardView>


                    </LinearLayout>


                </ScrollView>
            </LinearLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"
                android:background="@color/colorWhite"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/navigation" />

            <include layout="@layout/activity_screen18" />

            <include layout="@layout/pop_up_my_wallet" />

            <include layout="@layout/activity_register_new_number" />

            <include layout="@layout/wallet_pop_up" />

            <include layout="@layout/withdraw" />

            <include layout="@layout/loansapprovedview" />

            <include layout="@layout/pop_up_my_wallet" />

            <include layout="@layout/loan_application_pop_up" />

            <include layout="@layout/loan2" />

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/mynav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navdraw" />
</androidx.drawerlayout.widget.DrawerLayout>


