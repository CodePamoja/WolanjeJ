<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="345dp"
        android:layout_height="259dp"
        android:elevation="32dp"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            >
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_x"
                android:layout_alignParentEnd="true"
                android:id="@+id/cancelbtn"
                />

            <ImageView
                android:id="@+id/imagehold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cancelbtn"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_button_rounded"
                app:srcCompat="@drawable/ic_button_roun" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#34c47c"
                android:lineSpacingExtra="8sp"
                android:gravity="center_horizontal"
                android:text="Successful!"
                android:layout_below="@id/imagehold"
                android:layout_centerHorizontal="true"
                android:id="@+id/announcement"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222b45"
                android:lineSpacingExtra="4sp"
                android:gravity="center_horizontal"
                android:text="Your account has been successfully created. You will receive a confirmation message to the email linked to your account shortly.

Thank You!"
                android:paddingHorizontal="32dp"
                android:layout_marginTop="14dp"
                android:layout_below="@id/announcement"
                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>