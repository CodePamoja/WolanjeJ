<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Settings48">

    <include layout="@layout/toobarwithout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        app:layout_editor_absoluteY="55dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIN"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="36sp"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set your PIN"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="28sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You will use this to log in next time"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="8dp"
                                android:paddingTop="8dp"
                                android:layout_marginTop="24dp"

                                >

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="4 digit Pin"
                                    android:height="48dp"
                                    android:inputType="numberPassword"
                                    android:drawableRight="@mipmap/preview_1"
                                    android:background="@drawable/textviewborder"
                                    android:paddingHorizontal="16dp"
                                    android:paddingVertical="10dp"
                                    android:layout_marginBottom="8dp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="8dp"
                                android:paddingTop="4dp"
                                android:layout_marginTop="4dp"

                                >

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Repeat Pin"
                                    android:height="48dp"
                                    android:inputType="numberPassword"
                                    android:drawableRight="@mipmap/preview_1"
                                    android:background="@drawable/textviewborder"
                                    android:paddingHorizontal="16dp"
                                    android:paddingVertical="10dp"
                                    android:layout_marginBottom="8dp"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="8dp"
                                android:layout_marginBottom="24dp"

                                >
                                <Button
                                    android:id="@+id/btn_resetPIN"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:text="Reset PIN"
                                    android:textAllCaps="false"
                                    android:backgroundTint="@color/colorPurple"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>