<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmTransferToPhone52">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <include layout="@layout/toobarwithout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:text="Confirm"
                android:fontFamily="@font/nexa_xbold"
                android:textStyle="bold"
                android:textSize="18.7sp"
                android:textColor="@color/colorMidnight" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/transfer_receipt"
                android:gravity="center_vertical"
                android:paddingHorizontal="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/PName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_bold"
                        android:textStyle="bold"
                        android:textSize="14.7sp"
                        android:textColor="#18181c"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/transDateTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_book"
                        android:textStyle="normal"
                        android:textSize="12.3sp"
                        android:textColor="#8c8a9a"
                        android:textAlignment="center" />

                </LinearLayout>

                <View style="@style/Divider"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:fontFamily="@font/nexa_book"
                            android:textStyle="normal"
                            android:textSize="12.3sp"
                            android:textColor="#8c8a9a"
                            android:text="From"
                            android:textAlignment="textStart"
                            />
                        <TextView
                            android:id="@+id/senderName"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="13.7sp"
                            android:textColor="#0b0320"
                            android:textAlignment="textEnd"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="To"
                            android:fontFamily="@font/nexa_book"
                            android:textStyle="normal"
                            android:textSize="12.3sp"
                            android:textColor="#8c8a9a"
                            android:textAlignment="textStart"
                            />
                        <TextView
                            android:id="@+id/PNumber"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:textAlignment="textEnd"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="13.7sp"
                            android:textColor="#0b0320"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Amount"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/nexa_book"
                            android:textStyle="normal"
                            android:textSize="12.3sp"
                            android:textColor="#8c8a9a"
                            />
                        <TextView
                            android:id="@+id/sendAmount"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:textAlignment="textEnd"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="13.7sp"
                            android:textColor="#0b0320"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Message"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/nexa_book"
                            android:textStyle="normal"
                            android:textSize="12.3sp"
                            android:textColor="#8c8a9a"
                            />
                        <TextView
                            android:id="@+id/senderMessage"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Thank you"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="13.7sp"
                            android:textColor="#0b0320"
                            android:textAlignment="textEnd"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Tansaction fee"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/nexa_book"
                            android:textStyle="normal"
                            android:textSize="12.3sp"
                            android:textColor="#8c8a9a"

                            />
                        <TextView
                            android:id="@+id/transFee"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:textAlignment="textEnd"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="13.7sp"
                            android:textColor="#0b0320"
                            />
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/Divider"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="50"
                        android:text="TOTAL"
                        android:fontFamily="@font/nexa_book"
                        android:textStyle="normal"
                        android:textSize="12.3sp"
                        android:textColor="#8c8a9a"
                        android:textAlignment="textStart"
                        />
                    <TextView
                        android:id="@+id/totalAmount"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="50"
                        android:fontFamily="@font/nexa_bold"
                        android:textStyle="bold"
                        android:textSize="13.7sp"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorGreenBlue"
                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="70dp"
            android:paddingHorizontal="20dp">
            <Button
                android:id="@+id/confirm_phone_transfer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:backgroundTint="@color/colorPurple"
                android:fontFamily="@font/poppins_medium"
                android:textStyle="normal"
                android:textSize="12.7sp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:text="Continue"
              />
        </LinearLayout>

    </LinearLayout>

</ScrollView>