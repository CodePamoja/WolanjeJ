<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".activity_15_Ewallet2"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="#5B3256">
        <include layout="@layout/toolbar_ewallet2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="40.dp">

            <TextView
                android:id="@+id/textbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_balance"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textbalance"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:text="@string/_7800_00"
                android:textColor="@color/colorWhite"
                android:textSize="40sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                tools:text=".46" />
        </RelativeLayout>

    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#99000000"

        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="580dp"
        android:layout_marginBottom="24dp"
        app:strokeWidth="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/analitics_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_analytics" />

            <TextView
                android:id="@+id/text_analyitics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="21dp"
                android:layout_toEndOf="@id/analitics_image"
                android:text="@string/you_have_spent_this_month"
                android:textColor="#222222"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_analyitics"
                android:layout_marginStart="13dp"
                android:layout_toEndOf="@id/analitics_image"
                android:text="@string/_5670"
                android:textColor="#222222"
                android:textSize="18sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="#ffffff"
                android:contentDescription="@string/todo"
                android:src="@mipmap/invalid_name" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="24dp"
        app:cardBackgroundColor="#ffffff

"
        android:layout_marginTop="680dp"
        android:layout_marginBottom="2dp"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_group_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_group_5" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="16dp"
                android:gravity="center_horizontal"
                android:textColor="#21c17a"
                android:textSize="10sp"
                tools:text="My Wallet" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginStart="75dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ic_hand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_group_3" />
            <TextView
                android:layout_width="50dp"
                android:layout_height="16dp"
                android:textSize="10sp"
                android:layout_marginStart="20dp"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                tools:text="Payments"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginStart="150dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ic_group_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_hand" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="16dp"
                android:layout_marginStart="20dp"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="10sp"
                tools:text="Referrals" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginStart="220dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ic_combined_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_combined_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_marginStart="30dp"
                android:gravity="center_horizontal"
                tools:text="Billers"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginStart="295dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ic_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_marginStart="30dp"
                android:gravity="center_horizontal"
                tools:text="Billers"
                />
        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:gravity="center"
        android:orientation="vertical"
        android:background="#99000000"
        >
    <include layout="@layout/transfer_done_popup"/>
    </LinearLayout>
</RelativeLayout>
