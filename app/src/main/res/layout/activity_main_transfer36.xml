<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainTrasfere36"
    tools:context=".MainTransfer36">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <include layout="@layout/toobarwithout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:fontFamily="@font/nexa_xbold"
                android:textStyle="bold"
                android:textSize="18.7sp"
                android:textColor="#0b0320"
                android:text="@string/transfer" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/transfer_to_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/group_36a"
                    android:gravity="center_vertical"
                    android:padding="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="40dp"
                            android:minHeight="41dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_transfer_to_wallet"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transfer_to_wallet"
                            android:shadowColor="#19000000"
                            android:shadowDy="5"
                            android:shadowRadius="14"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="13.3sp"
                            android:textColor="#ffffff"
                            android:lineSpacingExtra="2.7sp"
                            android:layout_marginStart="20dp"
                            app:fontFamily="@font/poppins_medium"/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/transfer_to_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/group_36b"
                    android:gravity="center_vertical"
                    android:padding="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="40dp"
                            android:minHeight="49dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_transfer_to_bank"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transfer_to_bank"
                            android:shadowColor="#19000000"
                            android:shadowDy="5"
                            android:shadowRadius="14"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="13.3sp"
                            android:textColor="#ffffff"
                            android:lineSpacingExtra="2.7sp"
                            android:layout_marginStart="20dp"
                            app:fontFamily="@font/poppins_medium"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/transfer_to_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/group_36c"
                    android:gravity="center_vertical"
                    android:padding="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="40dp"
                            android:minHeight="49dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_transfer_to_phone"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/transfer_to_phone"
                            android:shadowColor="#19000000"
                            android:shadowDy="5"
                            android:shadowRadius="14"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="13.3sp"
                            android:textColor="#ffffff"
                            android:lineSpacingExtra="2.7sp"
                            android:layout_marginStart="20dp"
                            app:fontFamily="@font/poppins_medium"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

</ScrollView>