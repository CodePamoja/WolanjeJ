<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/AppTheme"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/payBillNow"
    android:background="@android:color/transparent"
    tools:context=".BillManager">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/splash2"
        android:orientation="vertical"
        android:id="@+id/show_pay_now"
        android:paddingHorizontal="16dp"
        android:alpha="1"
        >

        <ImageButton
            android:id="@+id/closeBillNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rectanglew"
            android:backgroundTint="@color/colorWhite"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Bill"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/nexa_bold"
                android:textStyle="bold"
                android:textSize="14.7sp"
                android:layout_marginStart="20dp"
                android:gravity="left"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/Jan/2020"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/blue_grey"
                android:layout_marginEnd="30dp"
                android:textSize="12sp"
                android:fontFamily="@font/nexa_book"
                android:textStyle="normal"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

            <ImageView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_grey"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.08"
                android:src="@mipmap/path_14_copy_2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Provider"
                android:textColor="@color/blue_grey"
                android:fontFamily="@font/nexa_book"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"

                />
            <TextView
                android:id="@+id/spName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PesaPal"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorMidnight"
                android:fontFamily="@font/nexa_bold"
                android:textStyle="bold"
                android:textSize="13.7sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="26dp"
                android:gravity="end"
                />
            <TextView
                android:id="@+id/nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nickname"
                android:layout_marginTop="8dp"
                android:layout_below="@id/sp"
                android:textColor="@color/blue_grey"
                android:fontFamily="@font/nexa_book"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internet Tingz"
                android:textColor="@color/colorMidnight"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nexa_bold"
                android:textStyle="bold"
                android:textSize="13.7sp"
                android:layout_below="@id/sp"
                android:layout_marginEnd="26dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:gravity="end"
                />
            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Name"
                android:textColor="@color/blue_grey"
                android:fontFamily="@font/nexa_book"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_below="@+id/nick"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/accountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zuku1010"
                android:textColor="@color/colorMidnight"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nexa_bold"
                android:textStyle="bold"
                android:textSize="13.7sp"
                android:layout_below="@+id/nick"
                android:layout_marginEnd="26dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:gravity="end"
                />
            <TextView
                android:id="@+id/accNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account No."
                android:textColor="@color/blue_grey"
                android:fontFamily="@font/nexa_book"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/account"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:id="@+id/accountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="444 789"
                android:textColor="@color/colorMidnight"
                android:layout_marginEnd="26dp"
                android:fontFamily="@font/nexa_bold"
                android:textStyle="bold"
                android:textSize="13.7sp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/account"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:gravity="end"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_grey"
            android:layout_marginBottom="33dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.08"
            android:src="@mipmap/path_14_copy_2"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="left"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Enter Amount"
                android:textCursorDrawable="@color/blue_grey"
                android:textColor="#0b0320"
                android:textStyle="normal"
                android:textSize="12.7sp"
                android:textColorHint="#8c8a9a"
                android:fontFamily="@font/nexa_book"
                android:padding="5dp"
                android:background="@drawable/textviewborder"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_continue_pay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Continue"
                android:layout_marginTop="5dp"
                android:layout_marginRight="24dp"
                android:fontFamily="@font/nexa_bold"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="12.7sp"
                android:layout_marginLeft="24dp"
                android:backgroundTint="@color/colorPurple"
                android:textColor="@color/colorWhite" />
            <TextView
                android:id="@+id/btnCancelBill"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cancel"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/nexa_bold"
                android:textStyle="bold"
                android:textSize="12.7sp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorWhite"
                android:textColor="@color/blue_grey" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>