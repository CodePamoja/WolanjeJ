<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".AllFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/splash2"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/show_pay_now"
        android:paddingHorizontal="16dp"
        android:alpha="1"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rectanglew"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:onClick="close_pay_now"
            android:layout_marginBottom="15dp"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay Bill"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11/Jan/2020"
                android:textColor="@color/blue_grey"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="23dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DETAILS"
                android:textColor="@color/blue_grey"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.08"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_below="@id/detTV"
                android:text="----------------------------------------------------------"
                android:textColor="@color/blue_grey"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.08"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Provider"
                android:textColor="@color/blue_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/spName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PesaPal"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorMidnight"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginRight="26dp"
                android:gravity="end"
                />
            <TextView
                android:id="@+id/nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nickname"
                android:layout_below="@id/sp"
                android:textColor="@color/blue_grey"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internet Tingz"
                android:textColor="@color/colorMidnight"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@id/sp"
                android:layout_marginRight="26dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="50dp"
                android:gravity="end"
                />
            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Name"
                android:textColor="@color/blue_grey"
                android:textSize="18sp"
                android:layout_below="@+id/nick"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/accountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zuku1010"
                android:textColor="@color/colorMidnight"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_below="@+id/nick"
                android:layout_marginRight="26dp"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="50dp"
                android:gravity="end"
                />
            <TextView
                android:id="@+id/accNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account No."
                android:textColor="@color/blue_grey"
                android:textSize="18sp"
                android:layout_below="@+id/account"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                />
            <TextView
                android:id="@+id/accountNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="444 789"
                android:textColor="@color/colorMidnight"
                android:textSize="16sp"
                android:layout_marginRight="26dp"
                android:textStyle="bold"
                android:layout_below="@+id/account"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="50dp"
                android:gravity="end"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="----------------------------------------------------------"
                android:textColor="@color/blue_grey"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.08"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Enter Amount"
                android:background="@drawable/textviewborder"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_continue_pay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Continue"
                android:layout_marginTop="5dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="@color/colorPurple"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />
            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Cancel"
                android:layout_marginTop="5dp"
                android:layout_marginRight="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="@color/colorWhite"
                android:textColor="@color/blue_grey"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>