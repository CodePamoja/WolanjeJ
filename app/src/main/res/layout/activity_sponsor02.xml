<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sponsor02">

    <LinearLayout
        android:id="@+id/top02"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f8f8fa"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/scroll03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">


        <include layout="@layout/toolbarsponsorship"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll02"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#f8f8fa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top02"
        app:layout_constraintVertical_weight="11">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_s02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Sponsor Information"
                android:textColor="@color/colorMidnight"
                android:textSize="28sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_select_academic_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:lineSpacingExtra="8sp"
                android:text="Select Studentâ€™s Academic level "
                android:textColor="@color/colorMidnight"
                android:textSize="18sp"
                android:layout_marginStart="32dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_s02" />


    <LinearLayout
        android:id="@+id/top_linear_02"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="23dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_select_academic_level">
        
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_primary"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_width="102dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_height="70dp"
            android:focusable="true">
            <ImageView
                android:id="@+id/tick_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/check_circle_copy"
                android:visibility="gone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorMidnight"
                android:lineSpacingExtra="12sp"
                android:gravity="center_horizontal"
                android:text="Primary"
                />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_secondary"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_width="102dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/tick_secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/check_circle_copy"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorMidnight"
                android:lineSpacingExtra="12sp"
                android:gravity="center_horizontal"
                android:text="Secondary"
                />


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_tertiary"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_width="102dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/tick_tertiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/check_circle_copy"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorMidnight"
                android:lineSpacingExtra="12sp"
                android:gravity="center_horizontal"
                android:text="Tertiary"
                />


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_top2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_linear_02">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_VTI"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_width="102dp"
            android:clickable="true"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_height="70dp"
            android:focusable="true">

            <ImageView
                android:id="@+id/tick_Vti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/check_circle_copy"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/colorMidnight"
                android:gravity="center_horizontal"
                android:text="Vocational Training Institute"
                />


        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>


        <TextView
            android:id="@+id/txt_question1of7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="195dp"
            android:textColor="@color/colorMidnight"
            android:text="Question 1 of 7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linear_top2"/>


        <ProgressBar
            android:id="@+id/progress_s02"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:layout_height="5dp"
            android:progress="20"
            android:backgroundTint="#d8d8d8"
            android:progressTint="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/txt_question1of7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_02"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="1">
 
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1_s02"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#d0d3d8"
            android:layout_weight="1"
            android:text="@string/save_amp_exit" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2_s02"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorAccent"
            android:onClick="moveSponsor03"
            android:text="@string/Continue"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>