<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registration08"
    tools:ignore="ExtraText">

    <include layout="@layout/toobarwithout" />
    <include layout="@layout/imageholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fingerprint"
                android:textColor="@color/colorMidnight"
                android:textSize="22sp"
                android:textAlignment="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap to register finger print"
                android:textColor="@color/blue_grey"
                android:textSize="14sp"
                android:paddingTop="6dp"
                android:paddingHorizontal="32dp"
                android:textAlignment="center"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@mipmap/group_9"
             android:layout_centerInParent="true"

              android:backgroundTint="@android:color/transparent"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="24dp"

            >
            <Button
                android:id="@+id/btn_getcon"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Continue"
                android:backgroundTint="@color/colorPurple"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:onClick="sendtoLogin"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:layout_marginTop="8dp"

            >
            <Button
                android:id="@+id/btn_getstarted"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="skip for now"
                android:onClick="sendtoLinkSuccess"
                android:textColor="@color/colorPurple"
                android:textSize="16sp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>