<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransferToWalletSingle37">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <include layout="@layout/toobarwithout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:text="@string/transfer_to_wallet"
                android:textColor="@color/colorMidnight"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:paddingVertical="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Select User"
                            android:textColor="#531edc"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Balance"
                            android:textAlignment="textEnd"
                            android:textColor="@color/blue_grey"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/select_user"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawSelectorOnTop="true"
                            android:dropDownWidth="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:popupBackground="@android:color/holo_purple"
                            android:spinnerMode="dropdown"
                            android:textAlignment="textStart"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Kes 15,000"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorMidnight"
                            android:textSize="22sp" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="15dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Transfer detail"
                        android:textAlignment="center"
                        android:textColor="@color/colorMidnight"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/walluserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/textviewborder"
                        android:hint="Enter Username"
                        android:inputType="textPersonName"
                        android:padding="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="50"
                            android:backgroundTint="@color/colorGreyBackground"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Scan QR"
                            android:textAllCaps="false"
                            android:textColor="@color/blue_grey"
                            android:textSize="14sp" />

                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="50"
                            android:backgroundTint="@color/colorGreyBackground"
                            android:fontFamily="@font/poppins_regular"
                            android:onClick="moveToContact"
                            android:text="Contacts"
                            android:textAllCaps="false"
                            android:textColor="@color/blue_grey"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:autoSizeMinTextSize="12sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="DETAILS"
                        android:textAlignment="textStart"
                        android:textColor="@color/blue_grey" />

                    <EditText
                        android:id="@+id/walltAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/textviewborder"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Amount"
                        android:inputType="number"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/walltMessage"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginVertical="20dp"
                        android:background="@drawable/textviewborder"
                        android:fontFamily="@font/poppins_regular"
                        android:hint="Message"
                        android:inputType="text|textMultiLine"
                        android:padding="10dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <Button
                android:id="@+id/continue_wallet_transfer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPurple"
                android:fontFamily="@font/poppins_regular"
                android:textAllCaps="false"
                android:onClick="transferMoney"
                android:padding="15dp"
                android:text="Continue"
                android:textColor="@color/colorWhite" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>