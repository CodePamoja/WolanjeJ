<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:theme="@style/AppTheme"
    android:layout_height="wrap_content"
    android:id="@+id/buyElectricityToken"
    android:background="@drawable/splash2"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Home">

    <ImageButton
        android:id="@+id/imagebtn_pay_netSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:onClick="close_wallet3"
        android:src="@mipmap/rectanglew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPayNetSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Buy Token"
        android:textColor="@color/colorMidnight"
        android:textSize="22sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebtn_pay_netSheet" />


    <TextView
        android:id="@+id/txt_balance_token_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/poppins_regular"
        android:gravity="end"
        android:text="Balance"
        android:textColor="@color/blue_grey"
        android:textSize="14sp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imagebtn_pay_netSheet" />

    <TextView
        android:id="@+id/balanceTokenSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/poppins_regular"
        android:gravity="end"
        android:letterSpacing="0.03"
        android:text="kes 0.000"
        android:textColor="#18181c"
        android:textSize="14sp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_balance_token_sheet" />


    <EditText
        android:id="@+id/TokenNumberSheet"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/wallet_pop_up_shape"
        android:fontFamily="@font/poppins_regular"
        app:counterEnabled="true"
        android:hint="Meter No."
        android:layout_marginTop="16sp"
        android:layout_marginStart="24dp"
        android:paddingHorizontal="10dp"
        android:inputType="number"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPayNetSheet" />

    <EditText
        android:id="@+id/amountBuyTokenSheet"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="Amount"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="16sp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/wallet_pop_up_shape"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TokenNumberSheet" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonBuyTokenSheet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Make Payments"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/warm_purple"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/amountBuyTokenSheet" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelBuyTokenSheetSheet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="221dp"
        android:backgroundTint="@color/colorWhite"
        android:fontFamily="@font/poppins_regular"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#8c8a9a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBuyTokenSheet" />

</androidx.constraintlayout.widget.ConstraintLayout>