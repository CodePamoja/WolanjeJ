<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registration07">

    <include layout="@layout/toobarwithout"/>
    <include layout="@layout/imageholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set your PIN"
                android:textColor="@color/colorMidnight"
                android:textSize="22sp"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You will use this to login next time"
                android:textColor="@color/blue_grey"
                android:textSize="14sp"
                android:paddingTop="6dp"
                android:paddingHorizontal="32dp"
                android:textAlignment="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:outlineAmbientShadowColor="@color/colorBlack"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="8dp"
                        android:layout_marginTop="24dp"

                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="4 digit Pin"
                            android:height="48dp"
                            android:inputType="numberPassword"
                            android:drawableRight="@mipmap/preview_1"
                            android:background="@drawable/textviewborder"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="10dp"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="4dp"
                        android:layout_marginTop="4dp"

                        >

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Repeat Pin"
                            android:height="48dp"
                            android:inputType="numberPassword"
                            android:drawableRight="@mipmap/preview_1"
                            android:background="@drawable/textviewborder"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="10dp"
                            android:layout_marginBottom="8dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="8dp"
                        android:layout_marginBottom="24dp"

                        >
                        <Button
                            android:id="@+id/btn_getstarted"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Continue"
                            android:backgroundTint="@color/colorPurple"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp"
                            android:onClick="sendtoFingerPrint"
                            />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>