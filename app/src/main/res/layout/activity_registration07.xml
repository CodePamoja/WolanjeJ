<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set your PIN"
        android:id="@+id/SetPINTextView"
        android:textFontWeight="100"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/InstructionTextView"
        android:padding="16dp"
        android:textSize="18dp"
        android:text="You will use this to login next time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/SetPINTextView" />

    <EditText
        android:id="@+id/PINEditView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="4 digit PIN"
        android:background="@drawable/shape"
        android:padding="16dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/InstructionTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/RepeatPINEditView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Repeat PIN"
        android:background="@drawable/shape"
        android:padding="16dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/PINEditView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/ContinueButton"
        android:layout_marginTop="16dp"
        android:text="Continue"
        android:padding="16dp"
        android:backgroundTint="drawable/shape"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPurple"
        app:layout_constraintTop_toBottomOf="@+id/RepeatPINEditView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>