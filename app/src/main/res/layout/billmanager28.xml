<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:theme="@style/AppTheme"
    android:layout_height="wrap_content"
    android:background="@drawable/splash2"
    android:id="@+id/billManagerView"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BillManager">

    <ImageButton
        android:id="@+id/bmClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:src="@mipmap/rectanglew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSaveBillSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Save Bill"
        android:textColor="@color/colorMidnight"
        android:textSize="22sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmClose" />

    <EditText
        android:id="@+id/bmAccountSaveBillName"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/wallet_pop_up_shape"
        android:fontFamily="@font/poppins_regular"
        android:hint="Account Name"
        android:layout_marginTop="16sp"
        android:layout_marginStart="24dp"
        android:paddingHorizontal="10dp"
        android:inputType="text"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSaveBillSheet" />

    <EditText
        android:id="@+id/bmAccountNickName"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/wallet_pop_up_shape"
        android:fontFamily="@font/poppins_regular"
        android:inputType="text"
        android:hint="Add Nickname"
        android:layout_marginTop="16sp"
        android:layout_marginStart="24dp"
        android:paddingHorizontal="10dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmAccountSaveBillName" />

    <EditText
        android:id="@+id/bmAccountNo"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/wallet_pop_up_shape"
        android:fontFamily="@font/poppins_regular"
        app:counterEnabled="true"
        android:paddingHorizontal="10dp"
        android:inputType="number"
        android:hint="Account No."
        android:layout_marginTop="16sp"
        android:layout_marginStart="24dp"
        android:maxLength="9"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bmAccountNickName" />

    <Spinner
        android:id="@+id/spinner_bill"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/myspinner"
        android:spinnerMode="dropdown"
        android:paddingHorizontal="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bmAccountNo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bmButtonSave"
        android:layout_width="327dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="105dp"
        android:backgroundTint="@color/warm_purple"
        android:text="Save"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_bill" />

    <TextView
        android:id="@+id/bmCancel"
        android:layout_width="327dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bmButtonSave" />

</androidx.constraintlayout.widget.ConstraintLayout>