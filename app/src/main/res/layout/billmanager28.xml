<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/AppTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/billManagerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:elevation="7dp"
    tools:context=".BillManager">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:alpha="1"
            android:background="@drawable/splash2"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="29dp"
                    android:backgroundTint="@color/colorWhite"
                    android:src="@mipmap/rectanglew"
                    android:id="@+id/bmClose"

                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Bill"
                android:textColor="@color/colorMidnight"
                android:textSize="28sp"/>

            <EditText
                android:id="@+id/bmAccountName"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:hint="Account Name"
                android:layout_margin="10dp"
                android:background="@drawable/textviewborder"
                android:padding="5dp" />
            <EditText
                android:id="@+id/bmNickname"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:hint="Add Nickname"
                android:layout_margin="10dp"
                android:background="@drawable/textviewborder"
                android:padding="5dp" />

            <EditText
                android:id="@+id/bmAccountNo"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:hint="Enter Account no."
                android:layout_margin="10dp"
                android:background="@drawable/textviewborder"
                android:padding="5dp" />

            <Spinner
                android:id="@+id/spinner_bill"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/myspinner"
                android:paddingHorizontal="18dp"
                android:spinnerMode="dropdown" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/bmButtonSave"
                android:layout_marginTop="105dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="327dp"
                android:layout_height="49dp"
                android:text="Save"/>

            <TextView
                android:id="@+id/bmCancel"
                android:layout_width="327dp"
                android:layout_height="49dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="Cancel"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>