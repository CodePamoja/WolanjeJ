<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen18"
    android:orientation="vertical"
    >
    <!--    scroll view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:text="@string/billers" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                app:cardElevation="10dp"
                android:id="@+id/card_view7"
                android:layout_width="98dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:background="@drawable/splash"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/Saved_billers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="70dp"
                    android:text="@string/saved_billers"
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="10dp"
                android:id="@+id/card_view8"
                android:layout_width="98dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:background="@drawable/splash"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/electricity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="70dp"
                    android:textAlignment="center"
                    android:text="@string/electricity" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="10dp"
                android:id="@+id/card_view9"
                android:layout_width="98dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:background="@drawable/splash"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/pay_internet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="70dp"
                    android:textAlignment="center"
                    android:text="@string/pay_internet" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="10dp"
                android:id="@+id/card_view10"
                android:layout_width="98dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:background="@drawable/splash"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/purchase_Air"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="70dp"
                    android:textAlignment="center"
                    android:text="@string/purchase_air" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>





    <!--    end scroll view-->
    <!-- A CardView that contains a TextView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:text="@string/my_account" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            app:cardElevation="10dp"
            android:background="@drawable/splash"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/Transfer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="17sp"
                android:paddingTop="70dp"
                android:text="@string/transfer" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            app:cardElevation="10dp"
            android:background="@drawable/splash"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/income_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingTop="70dp"
                android:textSize="17sp"
                android:text="@string/income_details" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view2"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            app:cardElevation="10dp"
            android:background="@drawable/splash"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/Wallet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="17sp"
                android:paddingTop="70dp"
                android:text="@string/wallet" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:text="@string/value_add" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view4"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            app:cardElevation="10dp"
            android:background="@drawable/splash"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/Services"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="17sp"
                android:paddingTop="70dp"
                android:text="@string/services" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view5"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            app:cardElevation="10dp"
            android:background="@drawable/splash"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/exchange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="17sp"
                android:paddingTop="70dp"
                android:text="@string/exchange" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view6"
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            app:cardElevation="10dp"
            android:background="@drawable/splash"
            app:cardCornerRadius="15dp">

            <TextView
                android:id="@+id/crypto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="17sp"
                android:paddingTop="70dp"
                android:text="@string/crypto" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>