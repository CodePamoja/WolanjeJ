<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f2f6"
    android:orientation="vertical"
    tools:context=".BookFlight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical"
        android:background="@color/home_purple">
        <include layout="@layout/toolbarwithout2"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginStart="28dp"
            android:textSize="28sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorWhite"
            android:text="Book a Flight"
            />
        <com.google.android.material.tabs.TabLayout
            android:layout_marginTop="10.8dp"
            android:id="@+id/tabLayout_book_flight"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/splash2">
        </com.google.android.material.tabs.TabLayout>

    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/bookFlightViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>


</LinearLayout>