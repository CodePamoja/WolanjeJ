<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:alpha="1"
    android:background="@drawable/popup_notification"
    android:id="@+id/transfer_unsuccessful_layout">

    <ImageView
        android:id="@+id/alert_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="116dp"
        android:src="@drawable/ic_button_rounded" />

    <TextView
        android:id="@+id/txt_transfer_unsuccessuful"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_icon"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="@font/nexa_bold"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="5.3sp"
        android:text="@string/transfer_unsuccessful"
        android:textColor="#fb3737"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_below="@+id/txt_transfer_unsuccessuful"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:src="@mipmap/path_14_copy_2" />

    <TextView
        android:id="@+id/txt_reference_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nexa_book"
        android:textStyle="normal"
        android:textSize="12.7sp"
        android:textColor="#8c8a9a"
        android:lineSpacingExtra="2sp"
        android:text="@string/reference_number" />

    <TextView
        android:id="@+id/reference_numberTra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_reference_number"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"

        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="12.7sp"
        android:textColor="#0b0320"
        android:lineSpacingExtra="5.3sp"
        android:layout_marginTop="7dp"
        android:text="**********" />

    <TextView
        android:id="@+id/txt_amount_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reference_numberTra"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nexa_book"
        android:textStyle="normal"
        android:textSize="12.7sp"
        android:textColor="#8c8a9a"
        android:lineSpacingExtra="2sp"
        android:text="@string/amount_sent" />

    <TextView
        android:id="@+id/txt_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reference_numberTra"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/nexa_book"
        android:textStyle="normal"
        android:textSize="12.7sp"
        android:textColor="#8c8a9a"
        android:lineSpacingExtra="2sp"
        android:text="@string/balance" />

    <TextView
        android:id="@+id/amount_sent_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_amount_sent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="12.7sp"
        android:textColor="#0b0320"
        android:lineSpacingExtra="5.3sp"
        android:layout_marginTop="15dp"
        android:text="@string/_0_00" />

    <TextView
        android:id="@+id/balance_note2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_balance"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="12.7sp"
        android:textColor="#0b0320"
        android:lineSpacingExtra="5.3sp"
        android:text="@string/_0_00" />

    <Button
        android:id="@+id/try_again_unsuccessful"
        android:layout_width="282dp"
        android:layout_height="45dp"
        android:layout_below="@id/balance_note2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="42dp"
        android:backgroundTint="@color/warm_purple"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6.7sp"
        android:text="@string/try_again"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="12.3sp"
        android:textStyle="normal" />
</RelativeLayout>