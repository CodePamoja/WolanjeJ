<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f2f6">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="475dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/combined_shape2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txt_from_fmbb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="NRB"
                    android:textColor="@color/colorMidnight"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_from_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_from_fmbb"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Railways"
                    android:textColor="@color/blue_grey"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/divider_my_bookings"
                    android:layout_width="26dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="77dp"
                    android:layout_toEndOf="@+id/txt_from_fmbb"
                    android:background="@color/gray4" />

                <ImageView
                    android:id="@+id/av_airplane_my_bookings"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="63dp"
                    android:layout_toEndOf="@+id/divider_my_bookings"
                    android:src="@drawable/ic_baseline_directions_bus_24" />

                <View
                    android:id="@+id/divider2_my_bookings"
                    android:layout_width="26dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="77dp"
                    android:layout_toEndOf="@+id/av_airplane_my_bookings"
                    android:background="@color/gray4" />

                <TextView
                    android:id="@+id/txt_to_Fmbb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@+id/divider2_my_bookings"
                    android:fontFamily="@font/poppins_bold"
                    android:text="MSA"
                    android:textColor="@color/colorMidnight"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/txt_to_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_to_Fmbb"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/divider2_my_bookings"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Pumwani"
                    android:textColor="@color/blue_grey"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/DottedLineBookings"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="0dp"
                android:src="@mipmap/path_14_copy_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_my_bookings"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="3sp"
                    android:text="Date"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue_grey"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/gate_my_bookings"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="3sp"
                    android:text="Gate"
                    android:textColor="@color/blue_grey"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/flight_number_my_bookings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:lineSpacingExtra="3sp"
                    android:text="Bus No."
                    android:textColor="@color/blue_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/set_date_bus_my_bookings"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="3sp"
                    android:text="8 May 2020"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorMidnight"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/set_gate_bus_my_bookings"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="3sp"
                    android:text="24A"
                    android:textColor="@color/colorMidnight"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/flight_number_bus_bookings"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:lineSpacingExtra="3sp"
                    android:text="NNS24"
                    android:textColor="@color/colorMidnight"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/boarding_time_booked"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="3sp"
                    android:text="Boarding Time"
                    android:textAlignment="textStart"
                    android:textColor="@color/blue_grey"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/seat_booked"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="3sp"
                    android:text="seat"
                    android:textColor="@color/blue_grey"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/class_booked"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="3sp"
                    android:text="Class"
                    android:textColor="@color/blue_grey"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/BusboardingTimeBooked"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="35dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="3sp"
                    android:text="8 May 2020"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorMidnight"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/Bus_seat_number_booked"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="3sp"
                    android:text="24A"
                    android:textColor="@color/colorMidnight"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/BusClassBooked"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Economy"
                    android:textColor="@color/colorMidnight"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:background="#f0f2f6"
                android:gravity="bottom" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>