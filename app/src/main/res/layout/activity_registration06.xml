<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration06">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_scrollFlags="scroll|enterAlways"
                app:navigationIcon="@mipmap/small_left" />

            <ImageView
                android:id="@+id/include4"
                android:layout_width="185dp"
                android:layout_height="172dp"
                android:layout_centerInParent="true"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ic_group_7__1_"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:padding="15dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/include4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Verification"
                    android:fontFamily="@font/nexa_xbold"
                    android:textStyle="bold"
                    android:textSize="14.7sp"
                    android:textColor="#0b0320"
                    android:textAlignment="center" />


                <TextView
                    android:layout_width="327dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:text="Please enter the code that sent to your phone in the form below.This code will expire in "
                    android:textAlignment="center"
                    android:fontFamily="@font/nexa_book"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#8c8a9a" />
                <TextView
                    android:id="@+id/txtview_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nexa_book"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:textColor="#8c8a9a"
                    android:layout_gravity="center_horizontal"
                    android:text="0:30"/>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="327dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:cardElevation="1dp"
                    android:elevation="1dp"
                    app:cardCornerRadius="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="172dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edittext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:text="1"
                                android:textSize="30sp" />

                            <EditText
                                android:id="@+id/inp2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="number"
                                android:gravity="center"
                                android:maxLength="1"
                                android:text="2"
                                android:textSize="30sp" />

                            <ProgressBar
                                android:id="@+id/progressr07"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:background="@drawable/progress"
                                app:layout_anchor="@+id/nestedScrollView3"
                                app:layout_anchorGravity="center" />

                            <EditText
                                android:id="@+id/inp3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="number"
                                android:maxLength="1"
                                android:gravity="center"
                                android:text="3"
                                android:textSize="30sp" />

                            <EditText
                                android:id="@+id/inp4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:inputType="number"
                                android:gravity="center"
                                android:maxLength="1"
                                android:text="4"
                                android:textSize="30sp" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_getstarted"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginVertical="20dp"
                            android:backgroundTint="@color/colorPurple"
                            android:onClick="sendtoSetYourPin"
                            android:text="Continue"
                            android:fontFamily="@font/nexa_xbold"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#ffffff"
                            android:textAllCaps="false" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="13dp"
                    android:layout_gravity="center_horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                    <Button
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="327dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:fontFamily="@font/nexa_book"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:textColor="#932777"
                        android:text="Resend" />

                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>