<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <!-- A RecyclerView with some commonly used attributes -->    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_weight="1"        android:orientation="vertical"        android:paddingHorizontal="10dp"        android:paddingVertical="20dp">        <include layout="@layout/toolbarwithsearch" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="0.15">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="start"                android:layout_marginLeft="20dp"                android:text="Loyalty Programs"                android:textColor="@color/colorBlack"                android:textSize="28sp"                android:textStyle="bold" />        </LinearLayout>        <LinearLayout            android:id="@+id/fragment_host"            android:layout_width="match_parent"            android:layout_height="0dp"            android:layout_weight="1"            android:orientation="vertical">            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="start"                android:layout_marginLeft="20dp"                android:text="PENDING"                android:textColor="@color/colorConcRed"                android:textSize="18sp"                android:textStyle="bold" />            <androidx.recyclerview.widget.RecyclerView                android:id="@+id/contacts_list"                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_weight="1.5"                android:clickable="true"                android:scrollbars="vertical" />        </LinearLayout>    </LinearLayout></LinearLayout>