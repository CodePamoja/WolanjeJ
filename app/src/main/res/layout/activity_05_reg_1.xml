<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".activity_05_reg_1"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A2652"
        android:id="@+id/top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY"
                android:src="@mipmap/group__9"
                />
            <ImageView
                android:id="@+id/item_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginStart="0dp"

                android:scaleType="fitXY"
                android:src="@mipmap/group__9"
                />



            />

            <include layout="@layout/toolbarbusiness" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="170dp"
                android:layout_marginTop="60dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="6sp"
                android:text="Step 03 of 03"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="110dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="36dp"
                android:src="@drawable/ic_indicator3" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="140dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/item_image2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="0dp"

                    android:scaleType="fitXY"
                    android:src="@mipmap/rectangle1"
                    />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#99000000">
        <include layout="@layout/reg_05_01"/>

    </LinearLayout>
    <TextView
        android:layout_width="279dp"
        android:layout_height="29dp"
        android:textSize="18sp"
        android:textColor="#0b0320"
        tools:text="Upload documents"
        android:layout_marginStart="45dp"
        android:layout_marginTop="150dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#222b45"
        android:layout_marginStart="56dp"
        android:layout_marginTop="520dp"
        android:lineSpacingExtra="4sp"
        tools:text="I have read and agree to the Terms &amp; Conditions "
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_gravity="center"
        android:layout_marginStart="38dp"
        android:layout_marginTop="520dp"
        android:layout_marginBottom="36dp"
        android:src="@drawable/shape" />
    <TextView
        android:layout_width="305dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text='By clicking "Continue" you agree to our terms and conditions as well as our privacy policy'
        android:textColor="#222b45"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="58dp"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="6sp"
        android:textAlignment="center" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:lineSpacingExtra="9sp"
        android:text="Continue"
        />
</RelativeLayout>