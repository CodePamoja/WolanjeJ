<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="349dp"
    android:layout_height="259dp"
    android:background="@drawable/shape"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:elevation="5dp"
    android:alpha="1"
    android:id="@+id/payment_failed_bp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageTrasfer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_button_rounded"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:textSize="26sp"
            android:textColor="#fa1c1c"
            android:lineSpacingExtra="4sp"
            android:gravity="center_horizontal"
            android:text="Payment Failed!"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_insufficient_cash_bp8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textColor="#222b45"
            android:lineSpacingExtra="4sp"
            android:gravity="center_horizontal"
            android:text="Sorry, you do not have sufficient cash in your wallet, kindly try again later."
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_payment_failed"
        android:layout_width="282dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="10dp"
        android:text="Top up"/>




</LinearLayout>