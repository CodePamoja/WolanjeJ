<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="345dp"
        android:layout_height="259dp"
        android:elevation="32dp"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:layout_marginTop="40dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_button_rounded"
                android:layout_centerHorizontal="true"
                android:id="@+id/imagehold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#34c47c"
                android:lineSpacingExtra="8sp"
                android:gravity="center_horizontal"
                android:text="Successful!"
                android:layout_below="@id/imagehold"
                android:layout_centerHorizontal="true"
                android:id="@+id/announcement"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/txtMsgSuccess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/announcement"
                android:layout_marginTop="14dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="4sp"
                android:paddingHorizontal="32dp"
                android:text="Your application has been received and is being processed. You will be notified on the progress."
                android:textColor="#222b45"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="282dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtMsgSuccess"
                android:layout_marginStart="30dp"
                android:layout_marginTop="17dp"
                android:text="Close"/>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>