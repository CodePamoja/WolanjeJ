<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/show_ple"
    android:background="@drawable/splash2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="7dp"
    android:layout_marginBottom="15dp"
    android:theme="@style/AppTheme"
    tools:context="com.wolanjeAfrica.wolanjej.Home">

    <ImageButton
        android:id="@+id/imgCloseWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:src="@mipmap/rectanglew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="My Wallet"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="14.7sp"
        android:textColor="#0b0320"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCloseWallet" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mytopupcard"
        android:layout_width="98dp"
        android:layout_height="114dp"
        android:background="@drawable/splash"
        android:clickable="true"
        android:elevation="3dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="24dp"
        android:focusable="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="18dp"

            >

            <ImageView
                android:id="@+id/imagetop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_groupwall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagetop"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:fontFamily="@font/nexa_bold"
                android:lineSpacingExtra="1.3sp"
                android:textStyle="bold"
                android:textSize="12.3sp"
                android:textColor="#8c8a9a"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="Top Up" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mywithdrawcard"
        android:layout_width="98dp"
        android:layout_height="114dp"
        android:background="@drawable/splash"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="13dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@+id/mytopupcard"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="18dp"

            >

            <ImageView
                android:id="@+id/imagetop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_withdraw" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagetop2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:lineSpacingExtra="1.3sp"
                android:layout_marginStart="0dp"
                android:fontFamily="@font/nexa_bold"
                android:textStyle="bold"
                android:textSize="12.3sp"
                android:textColor="#8c8a9a"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:text="Withdraw" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/openFundTrasfer"
        android:layout_width="98dp"
        android:layout_height="114dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/splash"
        android:clickable="true"
        android:layout_marginStart="17dp"
        android:elevation="3dp"
        android:focusable="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@+id/mywithdrawcard"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/imagetop3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_fundtransfer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagetop3"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:paddingHorizontal="5dp"
                android:fontFamily="@font/nexa_bold"
                android:lineSpacingExtra="1.3sp"
                android:textStyle="bold"
                android:textSize="12.3sp"
                android:textColor="#8c8a9a"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:gravity="center"
                android:text="Send Money" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/transactionHistCard"
        android:layout_width="98dp"
        android:layout_height="114dp"
        android:background="@drawable/splash"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mytopupcard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"

            >

            <ImageView
                android:id="@+id/imagetop4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_transactionhistory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagetop4"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:lineSpacingExtra="1.3sp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/nexa_bold"
                android:textStyle="bold"
                android:textSize="12.3sp"
                android:textColor="#8c8a9a"
                android:paddingHorizontal="5dp"
                android:paddingTop="20dp"
                android:gravity="center_horizontal"
                android:text="Transaction History" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pendingCommCard"
        android:layout_width="98dp"
        android:layout_height="114dp"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="315dp"
        android:background="@drawable/splash"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toEndOf="@+id/transactionHistCard"
        app:layout_constraintTop_toBottomOf="@+id/mywithdrawcard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"

            >

            <ImageView
                android:id="@+id/imagetop5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_pendingcommision" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagetop5"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:paddingTop="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/nexa_bold"
                android:lineSpacingExtra="1.3sp"
                android:textStyle="bold"
                android:textSize="12.3sp"
                android:textColor="#8c8a9a"
                android:layout_marginBottom="0dp"
                android:gravity="center_horizontal"
                android:text="Points pending" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/nexa_book"
        android:lineSpacingExtra="3.3sp"
        android:text="PRO TIPS:"
        android:textColor="#249af3"
        android:textSize="12.7sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pendingCommCard" />

    <TextView
        android:id="@+id/Earnup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexa_book"
        android:lineSpacingExtra="3.3sp"
        android:paddingHorizontal="26dp"
        android:text="Earn up to 10% in Loyalty Points from qualifying vendors the more you transact or send money."
        android:textColor="#222b45"
        android:textSize="12.7sp"
        android:textStyle="normal"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView39" />
</androidx.constraintlayout.widget.ConstraintLayout>