<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookFlight02">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/home_purple">
        <include layout="@layout/toolbarwithout2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:layout_marginStart="30dp"
            android:textSize="30sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorWhite"
            android:text="Book a Flight"
            />
        <LinearLayout
            android:layout_marginTop="10.8dp"
            android:id="@+id/tabLayout_book_flight"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical"
            android:background="@drawable/splash2">

            <TextView
                android:text="Select Date"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:textColor="@color/colorMidnight"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"
                android:layout_height="55dp"/>
        </LinearLayout>

    </LinearLayout>

    <CalendarView
        android:id="@+id/calender"
        android:layout_width="match_parent"
        android:fontFamily="@font/poppins_regular"
        android:layout_height="wrap_content"
        style="@style/AppTheme"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/blue_grey"
            android:lineSpacingExtra="6sp"
            android:text="Departure Date"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="82dp"
            android:textSize="14sp"
            android:textColor="@color/blue_grey"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="6sp"
            android:text="Return Date"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorMidnight"
            android:lineSpacingExtra="14sp"
            android:text="Tue 8 May"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/colorMidnight"
            android:lineSpacingExtra="14sp"
            android:text="Sat 12 May"
            />
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_book_flight02"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:onClick="MovetoBookFlightO3"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:text="Done"
        android:layout_marginTop="60dp"/>
</LinearLayout>

</ScrollView>