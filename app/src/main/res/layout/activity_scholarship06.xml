<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scholarship06"
    android:orientation="vertical">



    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            app:navigationIcon="@mipmap/small_left2"
            android:background="@mipmap/group_009"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal"
                android:text="Scholarship Application"
                android:layout_marginBottom="40dp"
                />
        </androidx.appcompat.widget.Toolbar>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/rectangle3"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="375dp"
            android:layout_height="105dp"
            android:layout_marginTop="42dp"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="29dp"
                android:src="@mipmap/education"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="30dp"
                android:textSize="15sp"
                android:textColor="#9c7bfc"
                android:lineSpacingExtra="7sp"
                android:text="University Application"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginStart="90dp"
                android:textSize="14sp"
                android:textColor="@color/blue_grey"
                android:text="Scholarship Amount:"
                />
            <TextView
                android:id="@+id/txt_scholarship_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="80dp"
                android:textSize="16sp"
                android:textColor="#18181c"
                android:gravity="end"
                android:text="KES 74,000"
                />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="26dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/blue_grey"
            android:text="Convenience Fee"
            />

        <EditText
            android:id="@+id/enterAmountS06"
            android:layout_width="327dp"
            android:layout_height="48dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/textviewborder1"
            android:fontFamily="@font/poppins_regular"
            android:hint=" Enter Amount"
            android:inputType="number"
            android:maxLength="9" />


        <Button
            android:id="@+id/btnPCF"
            android:layout_width="327dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="143dp"
            android:backgroundTint="#0bb8bb"
            android:text="Pay Convenience Fee"
            />

        <TextView
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:textSize="11sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#222b45"
            android:lineSpacingExtra="4sp"
            android:gravity="center_horizontal"
            tools:text="Before we can proceed with your application, lorem Ipsum
is simply dummy text of the typesetting industry. "
            />

    </LinearLayout>

</LinearLayout>