<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".activity_15_Ewallet2"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="41dp"
            android:layout_marginTop="49dp"
            android:textColor="#0b0320"
            android:lineSpacingExtra="8sp"
            tools:text="Wallet Top-Up Confirmation"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="108dp"
            android:layout_marginStart="41dp"
            android:textColor="@color/blue_grey"
            android:lineSpacingExtra="3sp"
            tools:text="Top Up From:"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="108dp"
            android:layout_marginStart="150dp"
            android:textColor="#0b0320"
            android:lineSpacingExtra="8sp"
            android:gravity="end"
            tools:text="Safaricom"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="131dp"
            android:layout_marginStart="41dp"
            android:textColor="@color/blue_grey"
            android:lineSpacingExtra="3sp"
            tools:text="Mobile No:"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="131dp"
            android:layout_marginStart="160dp"
            android:textColor="#0b0320"
            android:lineSpacingExtra="8sp"
            android:gravity="end"
            tools:text="705 000 000"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="155dp"
            android:layout_marginStart="41dp"
            android:textColor="@color/blue_grey"
            android:lineSpacingExtra="3sp"
            tools:text="Amount:"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="155dp"
            android:layout_marginStart="180dp"
            android:textColor="#0b0320"
            android:lineSpacingExtra="8sp"
            android:gravity="end"
            tools:text="Kes 15,000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="24dp"
            android:text="Enter PIN"
            android:textAlignment="textStart"
            android:textColor="@color/colorMidnight"
            android:textSize="24sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <EditText
                    android:id="@+id/pinValue1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:maxLength="1"
                    android:layout_marginStart="24dp"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:inputType="numberPassword"
                    android:backgroundTint="@color/colorPurple"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <EditText
                    android:id="@+id/pinValue2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:inputType="numberPassword"
                    android:backgroundTint="@color/colorPurple"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <EditText
                    android:id="@+id/pinValue3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:inputType="numberPassword"
                    android:backgroundTint="@color/colorPurple"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <EditText
                    android:id="@+id/pinValue4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="50dp"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:inputType="numberPassword"
                    android:backgroundTint="@color/colorPurple"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>





    </LinearLayout>


