<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.wolanjej.Settings48"
    android:background="@color/colorWhite"
    >
    <include layout="@layout/toobarwithout"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="36sp"
                android:id="@+id/settingsheader"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/security"
                android:id="@+id/security"
                android:layout_below="@id/settingsheader"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@string/fingerprint"
                android:id="@+id/fingerprint"
                android:layout_below="@id/security"
                />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/security"
                android:layout_toEndOf="@id/fingerprint"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/fingercontrol"
                android:onClick="controlfingerprint"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Divider"
                android:layout_marginTop="24dp"
                android:id="@+id/view1"
                android:layout_below="@id/fingerprint"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@string/password_pin"
                android:id="@+id/passsword"
                android:layout_below="@id/view1"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/invalid_name"
                android:layout_below="@id/view1"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:onClick="movetoIdentityCard"
                android:background="@color/colorWhite"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Divider"
                android:layout_marginTop="24dp"
                android:id="@+id/view2"
                android:layout_below="@id/passsword"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@string/profile"
                android:id="@+id/profile"
                android:layout_below="@id/view2"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/invalid_name"
                android:layout_below="@id/view2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:onClick="movetoPwdPIN"
                android:background="@color/colorWhite"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Divider"
                android:layout_marginTop="24dp"
                android:id="@+id/view3"
                android:layout_below="@id/profile"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/notification"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:id="@+id/notimage"
                android:layout_below="@id/view3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@string/notificationsset"
                android:id="@+id/notitext"
                android:layout_toEndOf="@id/notimage"
                android:layout_below="@id/view3"
                />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view3"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/notiswitch"
                android:onClick="controlnotification"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Divider"
                android:layout_marginTop="24dp"
                android:id="@+id/view4"
                android:layout_below="@id/notimage"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="@string/unlock_wallet"
                android:id="@+id/unwall"
                android:layout_below="@id/view4"
                />
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view4"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/unlockwallet"
                android:onClick="controlwallet"
                />
        </RelativeLayout>
    </ScrollView>


</LinearLayout>

