<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:theme="@style/AppTheme"
    android:layout_height="wrap_content"
    android:background="@drawable/splash2"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Home">

    <ImageButton
        android:id="@+id/imagebtn_pay_tvSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:onClick="close_wallet3"
        android:src="@mipmap/rectanglew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPayTvSheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tv Subscription"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="14.7sp"
        android:textColor="#0b0320"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagebtn_pay_tvSheet" />


    <TextView
        android:id="@+id/txt_balance_pay_tv_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/nexa_book"
        android:textStyle="normal"
        android:textSize="12.3sp"
        android:textColor="#8c8a9a"
        android:gravity="end"
        android:text="Balance"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imagebtn_pay_tvSheet" />

    <TextView
        android:id="@+id/txtTvSubscriptionBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="kes 0.000"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#18181c"
        android:letterSpacing="0.03"
        android:gravity="end"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_balance_pay_tv_sheet" />


    <Spinner
        android:id="@+id/selectServiceProviderTvSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        app:counterEnabled="true"
        app:counterMaxLength="9"
        android:background="@drawable/myspinner"
        android:theme="@style/spinnerTheme"
        android:spinnerMode="dropdown"
        android:drawableEnd="@drawable/ic_baseline_down"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:paddingHorizontal="10dp"
        android:inputType="number"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPayTvSheet" />
    <EditText
        android:id="@+id/PaytvAccountNoSheet"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="Account No."
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16sp"
        android:textColorHint="#8c8a9a"
        android:textCursorDrawable="@color/blue_grey"
        android:textColor="#0b0320"
        android:textStyle="normal"
        android:textSize="12.7sp"
        android:fontFamily="@font/nexa_book"
        android:paddingHorizontal="10dp"
        android:background="@drawable/wallet_pop_up_shape"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectServiceProviderTvSheet" />

    <EditText
        android:id="@+id/amountPayTvSheet"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:hint="Amount"
        android:layout_marginStart="24dp"
        android:textColorHint="#8c8a9a"
        android:textCursorDrawable="@color/blue_grey"
        android:textColor="#0b0320"
        android:textStyle="normal"
        android:textSize="12.7sp"
        android:fontFamily="@font/nexa_book"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16sp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/wallet_pop_up_shape"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PaytvAccountNoSheet" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPayTvSheet2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Make Payments"
        android:layout_marginTop="80dp"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="12.7sp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/warm_purple"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/amountPayTvSheet" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelPayTvSheet"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="221dp"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="12.7sp"
        android:backgroundTint="@color/colorWhite"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#8c8a9a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPayTvSheet2" />

</androidx.constraintlayout.widget.ConstraintLayout>