<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="345dp"
        android:layout_height="259dp"
        android:elevation="32dp"
        android:layout_centerInParent="true"
        android:background="@color/colorWhite"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            >
            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_x"
                android:layout_alignParentEnd="true"
                android:id="@+id/cancelbtn"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_alert"
                android:layout_below="@id/cancelbtn"
                android:layout_centerHorizontal="true"
                android:id="@+id/imagehold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#fa1c1c"
                android:lineSpacingExtra="8sp"
                android:gravity="center_horizontal"
                android:text="Error"
                android:layout_below="@id/imagehold"
                android:layout_centerHorizontal="true"
                android:id="@+id/announcement"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#222b45"
                android:lineSpacingExtra="4sp"
                android:gravity="center_horizontal"
                android:text="Sorry, we could not process your request at the moment due to a system error, kindly try again later."
                android:paddingHorizontal="32dp"
                android:layout_marginTop="14dp"
                android:layout_below="@id/announcement"
                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>