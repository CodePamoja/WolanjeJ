<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="#5B3256">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarewallet"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:navigationIcon="@mipmap/menu">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/toolbar_ewallet2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="91dp"
                android:layout_marginEnd="92dp"
                android:layout_toStartOf="@+id/notification_bell"
                android:text="Wolenje"
                android:textColor="@color/colorWhite"
                android:textSize="22sp" />


            <ImageView
                android:id="@+id/notification_bell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:src="@mipmap/bell_shape" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="22dp"
                android:layout_height="18dp"
                android:background="#ff4f29"
                android:layout_marginStart="290dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="31dp"
                android:src="@drawable/shape_ewallet2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="293dp"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="0sp"
                android:textColor="#ffffff"
                android:textSize="10sp"
                tools:text="12" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


</LinearLayout>
