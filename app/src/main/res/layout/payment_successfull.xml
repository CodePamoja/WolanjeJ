<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="330dp"
    android:layout_height="389dp"
    android:background="@drawable/popup_notification"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/alert_paymentSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_button_roun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPaymentSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Payment Successful!"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="#34c47c"
        android:lineSpacingExtra="5.3sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alert_paymentSuccess" />


    <ImageView
        android:id="@+id/img_successfulDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@mipmap/path_14_copy_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPaymentSuccess" />

    <TextView
        android:id="@+id/textView3SuccessD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexa_book"
        android:textStyle="normal"
        android:textSize="12.7sp"
        android:textColor="#8c8a9a"
        android:lineSpacingExtra="2sp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:text="Reference number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_successfulDialog" />

    <TextView
        android:id="@+id/refNumberSuccessD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="13.7sp"
        android:textColor="#0b0320"
        android:lineSpacingExtra="5.3sp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3SuccessD"
        android:text="#B3423424234" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/nexa_book"
        android:textStyle="normal"
        android:textSize="12.7sp"
        android:textColor="#8c8a9a"
        android:lineSpacingExtra="2sp"
        android:text="Amount sent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refNumberSuccessD" />

    <TextView
        android:id="@+id/textView5SuccessPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/nexa_book"
        android:textStyle="normal"
        android:textSize="12.7sp"
        android:textColor="#8c8a9a"
        android:lineSpacingExtra="2sp"
        android:layout_marginEnd="50dp"
        android:text="Balance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refNumberSuccessD" />

    <TextView
        android:id="@+id/amountSuccessDPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="13.7sp"
        android:textColor="#0b0320"
        android:lineSpacingExtra="5.3sp"
        android:text="0.00"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/balanceSuccessD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nexa_bold"
        android:textStyle="bold"
        android:textSize="13.7sp"
        android:textColor="#0b0320"
        android:lineSpacingExtra="5.3sp"
        android:text="0.00"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5SuccessPay" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue_pay"
        android:layout_width="282dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/warm_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="42dp"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="normal"
        android:textSize="12.3sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="6.7sp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Close"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountSuccessDPay" />

</androidx.constraintlayout.widget.ConstraintLayout>