<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Ewallet2">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="@drawable/splash2"
      android:layout_gravity="bottom"
      android:paddingHorizontal="24dp"
      android:paddingBottom="12dp">

    <ImageButton
        android:id="@+id/imagebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="29dp"
        android:src="@mipmap/rectanglew" />

    <TextView
        android:id="@+id/wpp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/balance"
        android:text="Wallet Top-Up"
        android:textColor="@color/colorMidnight"
        android:fontFamily="@font/poppins_bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagebtn"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/poppins_regular"
        android:gravity="end"
        android:text="Balance"
        android:textColor="@color/blue_grey"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtTopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/balance"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/poppins_regular"
        android:gravity="end"
        android:letterSpacing="0.03"
        android:text="kes 0.000"
        android:textColor="#18181c"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/selecttype"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/wpp"
        android:layout_marginTop="12dp"
        android:background="@drawable/myspinner"
        android:drawableEnd="@drawable/ic_baseline_down"
        android:fontFamily="@font/poppins_regular"
        android:hint="Select Type" />

    <EditText
        android:id="@+id/mobilenumber"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/selecttype"
        android:layout_marginTop="16dp"
        android:inputType="number"
        app:counterEnabled="true"
        android:maxLength="9"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/wallet_pop_up_shape"
        android:hint="Mobile Number"
        android:paddingStart="18dp" />

    <EditText
        android:id="@+id/amountTopUpWallet"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/mobilenumber"
        android:layout_marginTop="16dp"
        android:maxLength="6"
        android:inputType="number"
        android:lines="1"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/wallet_pop_up_shape"
        android:hint="Amount"
        android:paddingStart="18dp" />

    <Button
        android:id="@+id/contWalletPop"
        style="@style/TextStyle4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/amountTopUpWallet"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_regular"
        android:textAllCaps="false"
        android:backgroundTint="@color/warm_purple"
        android:text="@string/Continue" />

    <Button
        android:id="@+id/cancelWalletTopUp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contWalletPop"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/poppins_regular"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#8c8a9a"
        android:textSize="16sp" />

  </RelativeLayout>

</LinearLayout>