<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopupOtherNumber"
    android:orientation="vertical">

    <include layout="@layout/toobarwithout"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_balance_top_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="60dp"
            android:text="@string/balance"
            android:textColor="@color/blue_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_top_up03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="23dp"
            android:text="@string/top_up"
            android:textColor="@color/colorMidnight"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/balance_layout_top_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_balance3"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="159dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_toEndOf="@+id/txt_top_up3"
            android:gravity="end"
            android:letterSpacing="0.03"
            android:text="Kes15,000"
            android:textColor="#18181c"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_select_recipient_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_top_up03"
            android:layout_alignParentStart="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="25dp"
            android:text="@string/select_recipient"
            android:textColor="@color/blue_grey"
            android:textSize="16sp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_other_number01"
            android:layout_width="328dp"
            android:layout_height="73dp"
            android:layout_below="@+id/txt_select_recipient_Number"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="33dp">

            <TextView
                android:id="@+id/txt_My_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="My number"
                android:textColor="@color/colorMidnight"
                android:textSize="17sp" />

            <ImageButton
                android:id="@+id/btn_my_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/colorWhite"
                android:src="@drawable/ic_baseline_down" />

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/txtAmountTopUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_other_number01"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="35dp"
            android:textColor="@color/blue_grey"
            android:textSize="16sp"
            tools:text="Amount" />

        <EditText
            android:id="@+id/amount_top_up"
            android:layout_width="287dp"
            android:layout_height="48dp"
            android:layout_below="@+id/txtAmountTopUp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/textviewborder"
            android:hint="Amount Number."
            android:inputType="phone"
            android:padding="10dp" />

        <TextView
            android:id="@+id/amount_display01"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_below="@+id/amount_top_up"
            android:layout_alignParentStart="true"
            android:layout_marginStart="37dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/splash3"
            android:gravity="center"
            android:textColor="#8484a9"
            android:textSize="14sp"
            android:text="50" />

        <TextView
            android:id="@+id/amount_display02"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_below="@+id/amount_top_up"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/amount_display01"
            android:background="@drawable/splash3"
            android:gravity="center"
            android:textColor="#8484a9"
            android:textSize="14sp"
            android:text="100" />

        <TextView
            android:id="@+id/amount_display03"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_below="@+id/amount_top_up"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/amount_display02"
            android:background="@drawable/splash3"
            android:gravity="center"
            android:textColor="#8484a9"
            android:textSize="14sp"
            android:text="250" />

        <TextView
            android:id="@+id/amount_display04"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_below="@+id/amount_top_up"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/amount_display03"
            android:background="@drawable/splash3"
            android:gravity="center"
            android:textColor="#8484a9"
            android:textSize="14sp"
            android:text="500" />


        <Button
            android:id="@+id/btn_continue_top_up"
            android:layout_width="327dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="74dp"
            android:text="Continue" />
    </RelativeLayout>
</LinearLayout>