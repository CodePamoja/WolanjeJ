<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IncomeDetails">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar_income_details"/>

        <TextView
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:textSize="28sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:textColor="#0b0320"
            android:textFontWeight="@android:integer/config_longAnimTime"
            tools:text="Income Details"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/item_image2"
                android:layout_width="8dp"
                android:layout_height="6dp"

                android:layout_marginStart="119dp"
                android:layout_marginTop="23dp"

                android:src="@mipmap/path1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:textColor="#531edc"
                android:textSize="14sp"
                tools:text="Select Source" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="50dp"
                android:textColor="#0b0320"
                android:textSize="16sp"
                tools:text="Registration Commission" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="12dp"
            android:backgroundTint="#932777"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="28dp"
                android:textColor="#ffffff"
                android:textSize="14sp"
                tools:text="Current Balance" />

            <TextView
                android:layout_width="125dp"
                android:layout_height="66dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="53dp"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                android:textSize="40sp"
                tools:text="$7800" />

            <TextView
                android:layout_width="28dp"
                android:layout_height="29dp"
                android:layout_marginLeft="156dp"
                android:layout_marginTop="64dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                tools:text=".46" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>