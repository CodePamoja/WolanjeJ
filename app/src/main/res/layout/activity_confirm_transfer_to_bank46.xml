<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmTransferToBank46">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <include layout="@layout/toobarwithout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:text="Confirm"
                android:textColor="@color/colorMidnight"
                android:textSize="28sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/transfer_receipt"
                android:gravity="center_vertical"
                android:paddingHorizontal="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/bankToName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textAlignment="center"
                        android:textColor="@color/colorMidnight"
                        android:textSize="24sp"/>
                    <TextView
                        android:id="@+id/dateBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9:00 PM | 10/Jan/2020"
                        android:textAlignment="center"
                        android:textColor="@color/blue_grey"
                        android:textSize="18sp"/>

                </LinearLayout>

                <View style="@style/Divider"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="DETAILS"
                        android:textAlignment="textStart"
                        android:textColor="@color/blue_grey"
                        android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="To"
                            android:textAlignment="textStart"
                            android:textColor="@color/blue_grey"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:id="@+id/userToName"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="John Doe"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorMidnight"
                            android:textSize="18sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Bank"
                            android:textAlignment="textStart"
                            android:textColor="@color/blue_grey"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:id="@+id/bankAccNumber"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="5678 2345 9877 6489"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorMidnight"
                            android:textSize="18sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="40"
                            android:text="Amount"
                            android:textAlignment="textStart"
                            android:textColor="@color/blue_grey"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:id="@+id/AmountToBank"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="70"
                            android:text="KES 1,000"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorMidnight"
                            android:textSize="18sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Message"
                            android:textAlignment="textStart"
                            android:textColor="@color/blue_grey"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:id="@+id/bankMessage"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Thank you"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorMidnight"
                            android:textSize="18sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Tansaction fee"
                            android:textAlignment="textStart"
                            android:textColor="@color/blue_grey"
                            android:textSize="16sp"
                            />
                        <TextView
                            android:id="@+id/bankTransFee"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="0.00"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorMidnight"
                            android:textSize="18sp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/Divider"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="40"
                        android:text="TOTAL"
                        android:textAlignment="textStart"
                        android:textColor="@color/blue_grey"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/totBankToAmount"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="70"
                        android:text="KES 1,000"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorGreenBlue"
                        android:textSize="22sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="70dp"
            android:paddingHorizontal="20dp">
            <Button
                android:id="@+id/confirm_bank_transfer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="@color/colorPurple"
                android:text="Continue"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>