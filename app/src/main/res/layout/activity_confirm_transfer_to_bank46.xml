<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmTransferToBank46">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <include layout="@layout/toobarwithout"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:text="Confirm"
                android:fontFamily="@font/nexa_xbold"
                android:textStyle="bold"
                android:textSize="18.7sp"
                android:textColor="@color/colorMidnight" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/transfer_receipt"
                android:paddingHorizontal="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/bankToName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textAlignment="center"
                        android:fontFamily="@font/nexa_bold"
                        android:textStyle="bold"
                        android:textSize="14.7sp"
                        android:textColor="#18181c" />
                    <TextView
                        android:id="@+id/dateBank"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9:00 PM | 10/Jan/2020"
                        android:fontFamily="@font/nexa_book"
                        android:textStyle="normal"
                        android:textSize="12.3sp"
                        android:textColor="#8c8a9a"
                        android:textAlignment="center" />

                </LinearLayout>

                <View style="@style/Divider"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="To"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/nexa_book"
                            android:textStyle="normal"
                            android:textSize="12.3sp"
                            android:textColor="#8c8a9a"
                            />
                        <TextView
                            android:id="@+id/userToName"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="John Doe"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="12.7sp"
                            android:textColor="#0b0320"
                            android:textAlignment="textEnd"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Bank"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/nexa_book"
                            android:textStyle="normal"
                            android:textSize="12.3sp"
                            android:textColor="#8c8a9a"
                            />
                        <TextView
                            android:id="@+id/bankAccNumber"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="5678 2345 9877 6489"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="12.7sp"
                            android:textColor="#0b0320"
                            android:textAlignment="textEnd"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="40"
                            android:text="Amount"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/nexa_book"
                            android:textStyle="normal"
                            android:textSize="9.3sp"
                            android:textColor="#8c8a9a"
                            />
                        <TextView
                            android:id="@+id/AmountToBank"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="70"
                            android:text="KES 1,000"

                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="12.7sp"
                            android:textColor="#0b0320"
                            android:textAlignment="textEnd"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Message"
                            android:textAlignment="textStart"
                            android:fontFamily="@font/nexa_book"
                            android:textStyle="normal"
                            android:textSize="12.3sp"
                            android:textColor="#8c8a9a"
                            />
                        <TextView
                            android:id="@+id/bankMessage"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="Thank you"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="12.7sp"
                            android:textColor="#0b0320"
                            android:textAlignment="textEnd"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:fontFamily="@font/nexa_book"
                            android:textStyle="normal"
                            android:textSize="12.3sp"
                            android:textColor="#8c8a9a"
                            android:text="Tansaction fee"
                            android:textAlignment="textStart"
                            />
                        <TextView
                            android:id="@+id/bankTransFee"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_weight="50"
                            android:text="0.00"
                            android:fontFamily="@font/nexa_bold"
                            android:textStyle="bold"
                            android:textSize="12.7sp"
                            android:textColor="#0b0320"
                            android:textAlignment="textEnd"
                            />
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/Divider"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="40dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="40"
                        android:text="TOTAL"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/nexa_book"
                        android:textStyle="normal"
                        android:textSize="12.3sp"
                        android:textColor="#8c8a9a"
                        />
                    <TextView
                        android:id="@+id/totBankToAmount"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_weight="70"

                        android:fontFamily="@font/nexa_bold"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#3ca8b3"
                        android:text="KES 1,000"
                        android:textAlignment="textEnd"
                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="20dp">
            <Button
                android:id="@+id/confirm_bank_transfer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="@color/colorPurple"
                android:text="Continue"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>