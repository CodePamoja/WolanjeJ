<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="24dp"
    android:layout_gravity="bottom"
    android:background="@drawable/splash2"
    android:visibility="gone"
    android:id="@+id/Loansbox"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/rectanglew"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:onClick="close_poup_loans"
        android:layout_marginBottom="29dp"
        android:id="@+id/imagebtn"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/colorMidnight"
        android:text="Loans"
        android:id="@+id/wpp"
        android:layout_below="@id/balance"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/blue_grey"
        android:gravity="end"
        android:text="Loan Limit"
        android:id="@+id/balance"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imagebtn"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#18181c"
        android:letterSpacing="0.03"
        android:gravity="end"
        android:text="kes 15.000"
        android:layout_below="@id/balance"
        android:layout_alignParentRight="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:hint="Enter Amount"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:paddingStart="18dp"
        android:background="@drawable/wallet_pop_up_shape"
        android:id="@+id/selecttype"
        android:layout_below="@id/wpp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
       android:paddingHorizontal="18dp"
        android:text="Use of Funds"
        android:backgroundTint="@android:color/transparent"
        android:textAlignment="viewStart"
        android:textColor="@color/blue_grey"
        android:id="@+id/list_item_causes"
        android:layout_below="@id/selecttype"
android:drawableEnd="@drawable/ic_dropdown_arrow"
        android:onClick="displayPopUp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:paddingStart="18dp"
        android:visibility="gone"
        android:background="@drawable/wallet_pop_up_shape"
        android:hint="Please Specify"
        android:id="@+id/specific"
        android:layout_below="@id/list_item_causes"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id="@+id/cont"
        android:backgroundTint="@color/warm_purple"
        android:layout_below="@id/specific"
        android:layout_marginTop="16dp"
        android:text="Send Request"
        android:onClick="movotopin"
        />
    <Button
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="52dp"
        android:layout_below="@id/cont"
        android:textSize="16sp"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginTop="16dp"
        android:onClick="close_poup_loans"
        android:text="Cancel"
        />

</RelativeLayout>